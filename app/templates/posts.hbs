<h1>Posts</h1>

<ul>
  {{#each model as |post|}}
    <li>
      {{!-- {{post.title}} --}}
      <LinkTo @route="post" @model={{post.id}}>{{post.title}}</LinkTo>
      {{!-- {{#link-to 'post'}}test{{/link-to}} --}}
    </li>
    <ul>
      {{#each post.comments as |comment|}}
        <li>
          {{comment.text}}<br>
          <small> commented on {{comment.publishedAt}}</small>
        </li>
      {{/each}}
    </ul>
  {{/each}}
</ul>